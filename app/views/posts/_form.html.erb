
<%= render '/shared/errors', object: @post %>

<h4>Rails model-backed form helpers</h4>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :descrption %>
  <%= f.text_area :description, rows: 3 %>
  <br/>
  <div class=control-group>
    <%= f.label "Categories" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |checkbox| %>
      <% checkbox.label(class: 'checkbox inline'){checkbox.check_box(class: 'checkbox') + checkbox.text} %>
    <% end %>
  </div>
  <br/>
  <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class:"btn btn-primary") %>
<% end %>