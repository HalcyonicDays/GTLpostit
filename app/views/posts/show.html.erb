<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<h3>Post:</h3>
<p><%= @post.description %></p>
<p><%= link_to @post.url, fix_url(@post.url) %></p>
<hr/>
<div class='well'>
  <% @post.comments.each do |comment| %>
    <ul>
      <p><li><%= comment.body %></li>
      by <%= link_to comment.user.username, user_path(comment.user) %></p>
    </ul>
  <% end %>
</div>

<%= render 'comments/form' if logged_in? %>

<%= link_to 'return to posts index', posts_path %>